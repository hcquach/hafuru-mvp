<%= content_for(:title) do %>
Hafuru - #Grateful
<% end %>

<% if policy(@gratitude).show? %>

  <div class="gratitude-wrapper">

    <div class="gratitude-container">

      <div class="gratitude-info">
        <div class="gratitude-date">
          <p><%= @gratitude.updated_at.strftime("%b") %> <%= @gratitude.updated_at.year %></p>
          <div id="day"><%= @gratitude.updated_at.day %></div>
        </div>
        <div class="gratitude-title">
          <h2>Grateful for<br>#<%= @gratitude.title %></h2>
        </div>
      </div>

      <div class="gratitude-photo">

        <%= cl_image_tag @gratitude.photo, height: 400, width: 500, crop: :fill %>
        <div class="gratitude-title top-right">
          <h2 style="background-color: rgba(10, 10, 10, 0.3); padding: 5px 5px; margin: 5px 0px; border-radius: 2px">#<%= @gratitude.category.name %></h2>
        </div>
      </div>

    <div class="gratitude-button-container">
      <div class="gratitude-options">
        <%= link_to "Board", gratitudes_path, class: "gratitude-button" %>
        <%= link_to "Remember", gratitude_path(@gratitudes.sample), class: "gratitude-button" %>
        <% unless @gratitude.match_status %>
          <%= link_to "Match", gratitude_matches_path(@gratitude), method: :create, class: "gratitude-button", id: "match-sweet" %>
        <% end %>
      </div>
      <div class="edit-delete-options">
        <%= link_to "Edit", edit_gratitude_path(@gratitude), class: "gratitude-button" %>
        <a id="delete-sweet" class="gratitude-button" href="#">Delete</a>
        <%= link_to "Delete", gratitude_path(@gratitude), method: :delete, remote: false, style: "display: none;", id: "delete-hidden" %>
      </div>
    </div>
  </div>



    <div class="gratitude-description">
      <p><%= @gratitude.description %></p>
    </div>

  </div>

<% end %>
