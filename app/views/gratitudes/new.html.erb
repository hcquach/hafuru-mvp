<%= content_for(:title) do %>
Hafuru - Create Gratitude
<% end %>

<div class="background-image" style="url(background-image: url('http://res.cloudinary.com/dpdu9kl83/image/upload/v1528170423/photo-1527243775719-2b14b3f29dc3.jpg')">
  <div class="form-container">
    <h2>Create a new gratitude</h2>
    <div class="row">
      <div class="col-sm-12 col-md-4 col-md-offset-4">
        <%= simple_form_for(@game, html: {class: 'form-horizontal' }) do |f| %>
          <%= f.input :title, class: "label-input" %>
          <%= f.input :description, :as => :text, :input_html => { :rows => 7 }, class: "label-input" %>
          <%= f.input :category, class: "label-input" %>
          <%= f.input :photo, class: "label-input" %>
          <%= f.input :photo_cache, as: :hidden, class: "label-input" %>
          <div class="create-btn">
          <%= f.submit "Create", class: "btn btn-primary btn-lg btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
