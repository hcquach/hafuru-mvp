<%= content_for(:title) do %>
Hafuru - Welcoming Gratefulness
<% end %>



<!-- Quotes and Form -->
<div class="home-container">
  <div class="container-testimonials-form">
    <div class="row">
          <div class="col-xs-12 col-md-6">
      <div class="testimonials">
        <div class="page animated" style="background:#8aa651">
          <div class="quotes-container">
            <blockquote class="quote">
              <p class="quote__body">Loading&hellip;</p>
            </blockquote>
            <div class="cta">
              <button class="button new-quote animated">Get Inspired</button>
            </div>
          </div>
        </div>
        <div class="quote-hafuru-footer">
          <p>From Hafuru with <i class="fas fa-heart"></i></p>
        </div>
      </div>
    </div>

  <div class="col-xs-12 col-md-6">
    <div class="home-form text-center">
      <div class="form-inner-container">
      <form id="letter-form", action="/gratitudes" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <p>Today I'm
          <label for="title">grateful</label> for
          <input type="text" name="gratitude[title]" id="title" minlength="3" placeholder="(coffee, music, sun)" required>
        </p>
        <br>
        <p>
          <label for="description">Because</label><br>
          <input type="text" name="gratitude[description]" id="description" placeholder="(it made me smile)" required>
        </p>
        <br>
        <p>
          <label for="category">Category</label>
          <select name="gratitude[category_id]">
            <% Category.all.sort.each do |cat| %>
              <option value="<%= cat.id %>"><%= cat.name %></option>
            <% end %>
          </select>
        </p>
        <p>
          <div class="cta">
           <button type= "submit" class="button new-quote animated">Create</button>
          </div>
        </p>
      </form>
      </div>
      <div class="quote-self-footer">
        <p>To your inner self with <i class="fas fa-heart"></i></p>
      </div>
    </div>
  </div>
    </div>

  </div>
</div>
