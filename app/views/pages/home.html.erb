<% content_for(:navbar_class, "navbar-transparent") %>

<!-- Banner -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://res.cloudinary.com/le-wagon-hcquach/image/upload/v1528120306/friends-backpacking-together_4460x4460.jpg');">
  <div class="banner-content">
    <h1>Hafuru</h1>
    <p><span id="banner-typed-text"></span></p>
    <a class="btn btn-primary btn-lg">Start now</a>
  </div>
</div>

  <!-- Carousel -->
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active cover">
        <img src="http://res.cloudinary.com/dpdu9kl83/image/upload/v1528208572/Screen_Shot_2018-06-05_at_23.22.01.png" alt="Gratitude 1">
    </div>
    <div class="item">
       <img src="http://res.cloudinary.com/dpdu9kl83/image/upload/v1528208572/Screen_Shot_2018-06-05_at_23.22.01.png" alt="Gratitude 2">
    </div>

    <div class="item">
       <img src="http://res.cloudinary.com/dpdu9kl83/image/upload/v1528208572/Screen_Shot_2018-06-05_at_23.22.01.png" alt="Gratitude 3">
    </div>
  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
  </div>
</div>

<div class="container-testimonials-form">

  <div class="testimonials">
    <p>"A grateful heart is a magnet for miracles"</p>
    <p>"Grateful turns what we have into enough"</p>
    <p>"Today I'm counting my blessings, not my problems"</p>
  </div>

  <div class="home-form">
      <h2>Try for yourself</h2>
    <form id="contact-form" action="/gratitudes" method='post'>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <p>Today I'm
        <label for="title">grateful</label> for
        <input type="text" name="gratitude[title]" id="title" minlength="3" required></p>
      <p>
        <label for="description">Because</label>
        <input type="text" name="gratitude[description]" id="description" class="expanding"></p>
      <p>
        <label for="category">Category</label>
        <input type="text" name="gratitude[category_id]" id="category" class="expanding"></p>
      <p>
        <button type="submit">
          Create
        </button>
      </p>
    </form>

  </div>
</div>
